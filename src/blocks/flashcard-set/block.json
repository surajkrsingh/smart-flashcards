{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "smfcs/flashcard-set",
    "version": "0.1.0",
    "title": "Flashcard Set",
    "category": "widgets",
    "icon": "slides",
    "description": "Create a set of flashcards with navigation",
    "attributes": {
        "currentSlide": {
            "type": "number",
            "default": 0
        },
        "displayMode": {
            "type": "string",
            "default": "slide",
            "enum": ["slide", "stack", "grid"]
        },
        "enableShuffle": {
            "type": "boolean",
            "default": false
        }
    },
    "supports": {
        "align": ["wide", "full"],
        "html": false
    },
    "textdomain": "smart-flashcards",
    "editorScript": "file:../../../build/blocks/flashcard-set/index.js"
}
